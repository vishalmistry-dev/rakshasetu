{
  "name": "rakshasetu",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "pnpm --filter @rakshasetu/api dev",
    "dev:web": "pnpm --filter @rakshasetu/website dev",
    "dev:shopify": "pnpm --filter @rakshasetu/shopify-app dev",
    "build": "turbo run build",
    "db:generate": "pnpm --filter @rakshasetu/database db:generate",
    "db:push": "pnpm --filter @rakshasetu/database db:push",
    "db:studio": "pnpm --filter @rakshasetu/database db:studio",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "pnpm": {
    "overrides": {
      "prisma": "6.18.0",
      "@prisma/client": "6.18.0",
      "typescript": "5.9.3",
      "@types/react": "18.3.26",
      "@types/react-dom": "18.3.7",
      "react": "18.3.1",
      "react-dom": "18.3.1"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "dotenv-cli": "^7.4.4",
    "husky": "^8.0.0",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.22.0"
}
