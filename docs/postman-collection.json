{
  "info": {
    "name": "Rakshasetu API - v1",
    "description": "Complete API collection for Rakshasetu platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api/v1",
      "type": "string"
    },
    {
      "key": "merchantAccessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "merchantId",
      "value": "",
      "type": "string"
    },
    {
      "key": "storeId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:4000/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "4000",
          "path": ["health"]
        }
      }
    },
    {
      "name": "Auth - Merchant",
      "item": [
        {
          "name": "Set Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/merchant/set-password/:token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "merchant", "set-password", ":token"],
              "variable": [
                {
                  "key": "token",
                  "value": "your_setup_token"
                }
              ]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Save access token from cookie",
                  "const cookies = pm.cookies.get('merchantAccessToken');",
                  "if (cookies) {",
                  "    pm.collectionVariables.set('merchantAccessToken', cookies);",
                  "}",
                  "",
                  "// Save merchant ID from response",
                  "const response = pm.response.json();",
                  "if (response.data && response.data.merchant) {",
                  "    pm.collectionVariables.set('merchantId', response.data.merchant.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"merchant@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/merchant/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "merchant", "login"]
            }
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"merchant@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/merchant/forgot-password",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "merchant", "forgot-password"]
            }
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"newPassword\": \"newpassword123\",\n  \"confirmPassword\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/merchant/reset-password/:token",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "merchant", "reset-password", ":token"],
              "variable": [
                {
                  "key": "token",
                  "value": "reset_token"
                }
              ]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Cookie",
                "value": "merchantAccessToken={{merchantAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/merchant/logout",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "merchant", "logout"]
            }
          }
        }
      ]
    },
