      ]
    },
    {
      "name": "Stores",
      "item": [
        {
          "name": "List Stores",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const response = pm.response.json();",
                  "if (response.data && response.data.length > 0) {",
                  "    pm.collectionVariables.set('storeId', response.data[0].id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "merchantAccessToken={{merchantAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/shop/stores",
              "host": ["{{baseUrl}}"],
              "path": ["shop", "stores"]
            }
          }
        },
        {
          "name": "Get Store Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "merchantAccessToken={{merchantAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/shop/stores/{{storeId}}",
              "host": ["{{baseUrl}}"],
              "path": ["shop", "stores", "{{storeId}}"]
