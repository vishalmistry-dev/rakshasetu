    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "merchantAccessToken={{merchantAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/shop/products?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["shop", "products"],
              "query": [
                {
                  "key": "storeId",
                  "value": "{{storeId}}",
                  "disabled": true
                },
                {
                  "key": "search",
                  "value": "laptop",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Cookie",
                "value": "merchantAccessToken={{merchantAccessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/shop/products/:productId",
              "host": ["{{baseUrl}}"],
              "path": ["shop", "products", ":productId"],
              "variable": [
                {
                  "key": "productId",
                  "value": "product_id_here"
                }
              ]
            }
          }
        },
